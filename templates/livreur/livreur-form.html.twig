                        </div>
                        <div class="form-group">
                            <label for="exampleInputEtat1">TÃ©lephone</label>
                            {{ form_widget(form.tel,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.tel,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUserID1">Livraison</label>
                            {{ form_widget(form.livraison,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.livraison,{'attr':{'class':'form-control'}}) }}
                        </div>




                    </div>
                    <!-- /.card-body -->

                    {{ form_end(form) }}
                </form>
            </div>
            <!-- /.card -->
        </div>
    {% endblock %}
