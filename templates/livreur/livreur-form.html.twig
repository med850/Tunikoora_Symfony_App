{% extends 'admin/NavDash.html.twig' %}
    {% block body %}
        <div style="display:flex;align-items: center;justify-content: center;margin-top: 150px;">
            <!-- jquery validation -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Modifier livreur   <small>Session Admin</small></h3>
                    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form id="quickForm" novalidate="novalidate">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="exampleInputReference1">Nom</label>
