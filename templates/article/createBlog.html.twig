{% extends 'admin/NavDash.html.twig' %}

    {% block body %}
        <div style="display:flex;align-items: center;justify-content: center;margin-top: 150px;">
            <!-- jquery validation -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 >Ajouter un article   </h3>
                    {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                </div>
                <!-- /.card-header -->
                <!-- form start -->

                <form id="quickForm" novalidate="novalidate">
                    <div class="card-body">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Titre de l'article</label>
                            {{ form_widget(form.titre,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.titre,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Description de l'article</label>
                            {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(form.description,{'attr':{'class':'form-control'}}) }}
                        </div>

                    <label for="inputText" class="col-sm-4 col-form-label">Image</label>
                    <div class="col-sm-6">
                        {{ form_widget(form.image,{'attr':{'class':'form-control'}}) }}
                        {{ form_errors(form.image,{'attr':{'class':'form-control'}}) }}

                    </div>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        {{ form_widget(form.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>
            <!-- /.card -->
        </div>
    {% endblock %}