{% extends 'admin/NavDash.html.twig' %}
{% block body %}

    <div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 20px;">

        <div class="col-lg-8">

            <div class="card">
                <div class="card-body">
                    <a href="{{ path('addArticle') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>
                    <h3>Liste des articles</h3>
                    <!-- Table with stripped rows -->
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for a in articles %}
                            <tr>
                                <td>{{ a.titre }}</td>
                                <td>{{ a.description }}</td>
                                <td><img src="{{asset('/adminAssets/img/')~ a.image  }}" alt="" style="width: 200px; height: 150px"></td>
                                <td>
                                    <a class="btn btn-primary" href="{{ path('modifArticle',{'id':a.id}) }}">Modifier</a>
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="{{ path('supp_article',{'id':a.id}) }}">Supprimer</a>
                                </td>
                            </tr>

                        {% endfor %}
                        <a class="btn btn-outline-secondary" href="{{ path('addArticle')}}">Ajouter un article</a>
                        </tbody>

                    </table>
                </div>
            </div>

        </div>



    </div>
{% endblock %}

